FROM rocker/binder:4.0.2
LABEL maintainer='Juergen'
USER root
COPY . ${HOME}
RUN chown -R ${NB_USER} ${HOME}
USER ${NB_USER}



RUN wget https://github.com/j-5chneider/howR/raw/master/DESCRIPTION && R -e "options(repos = list(CRAN = 'http://mran.revolutionanalytics.com/snapshot/2020-10-29/')); devtools::install_deps()"

RUN rm DESCRIPTION.1; exit 0
